<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="JMayer.Example.WebAssemblyBlazor.styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <HeadOutlet @rendermode="@(new InteractiveWebAssemblyRenderMode(prerender: false))" />
</head>

<body id="preload-body" style="background-color: rgba(50, 51, 61, 1);">
    <Routes @rendermode="@(new InteractiveWebAssemblyRenderMode(prerender: false))" />
    <script src="_framework/blazor.web.js?version=8"></script>
    
    <div id="preload-load-indicator" class="jumbotron d-flex align-items-center min-vh-100">
        <div class="container text-center">
            <div class="spinner-border text-secondary" role="status" style="width: 10rem; height: 10rem;"></div>
            <div class="text-center text-secondary m-5">
                <p class="lead"><strong>Loading WebAssembly Blazor Example</strong></p>
            </div>
        </div>
    </div>

    <script>
        function removePreloading() {
            //Remove the load indicator.
            var element = document.getElementById('preload-load-indicator');
            element.remove();

            //Remove styles from the body; Mudblazor will apply there own.
            element = document.getElementById('preload-body');
            element.style.backgroundColor = null;
        }
    </script>
</body>

</html>
